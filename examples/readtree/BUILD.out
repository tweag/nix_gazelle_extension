# gazelle:prefix io_tweag_gazelle_nix
# gazelle:exclude nix
# gazelle:exclude 3rdparty
# gazelle:nix_repositories nixpkgs=@nixpkgs
# gazelle:nix_prelude default.nix
load(
    "@bazel_gazelle//:def.bzl",
    "DEFAULT_LANGUAGES",
    "gazelle",
    "gazelle_binary",
)

gazelle(
    name = "gazelle",
    data = ["@fptrace//:bin/fptrace"],
    gazelle = "//:gazelle_binary",
)

gazelle_binary(
    name = "gazelle_binary",
    languages = DEFAULT_LANGUAGES + ["@io_tweag_gazelle_nix//nix/gazelle"],
)

gazelle(
    name = "gazelle-update",
    command = "update",
    data = ["@fptrace//:bin/fptrace"],
    extra_args = [
        "-lang",
        "nix",
    ],
    gazelle = "//:gazelle_binary",
)

gazelle(
    name = "gazelle-update-repos",
    command = "update-repos",
    data = ["@fptrace//:bin/fptrace"],
    extra_args = [
        "-lang",
        "nix",
        "any",
    ],
    gazelle = "//:gazelle_binary",
)

exports_files(
    glob([
        # export prelude - has to be included always
        "default.nix",
        # for testing purposes
        "**/*",
    ])
)
